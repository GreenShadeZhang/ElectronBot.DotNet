<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ElectronBot.Copilot.Views.Agents.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chat="using:ElectronBot.Copilot.Controls.Chat"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:BotSharp.Abstraction.Conversations.Models">
    <Page.Resources>
        <DataTemplate x:Key="ContactListViewTemplate" x:DataType="models:Conversation">
            <TextBlock
                Margin="0,8,0,8"
                x:Phase="1"
                Text="{x:Bind Title}"
                TextWrapping="WrapWholeWords" />
        </DataTemplate>


    </Page.Resources>
    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView
            x:Name="ConvList"
            Grid.Column="0"
            Width="200"
            Height="480"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1"
            IsItemClickEnabled="True"
            ItemTemplate="{StaticResource ContactListViewTemplate}"
            ItemsSource="{x:Bind ViewModel.ConversationList, Mode=OneWay}"
            SelectedIndex="0"
            SelectedItem="{x:Bind ViewModel.SelectedConversation, Mode=TwoWay}">
            <i:Interaction.Behaviors>
                <ic:EventTriggerBehavior EventName="ItemClick">
                    <ic:InvokeCommandAction Command="{x:Bind ViewModel.ConvSelectCommand}" CommandParameter="{x:Bind ConvList.SelectedItem, Mode=TwoWay}" />
                </ic:EventTriggerBehavior>
            </i:Interaction.Behaviors>
        </ListView>
        <StackPanel Grid.Column="1">
            <chat:ChatModuleMsgList ViewModel="{x:Bind ViewModel, Mode=OneWay}" />
            <chat:ChatModuleInput ViewModel="{x:Bind ViewModel, Mode=OneWay}" />
        </StackPanel>

    </Grid>
</Page>
